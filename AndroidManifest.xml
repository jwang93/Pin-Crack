<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pincrack"
    android:versionCode="1"
    android:versionName="1.2" >

    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/logo_v2"
        android:label="@string/app_name"
        android:theme="@style/PinCrack" >
        <activity
            android:name="pincrack.PinCrackActivity"
            android:label="@string/app_name" 
            android:clearTaskOnLaunch="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pincrack.DataActivity"
            android:label="@string/app_name" >
        </activity>        
        <activity
            android:name="pincrack.InputActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="pincrack.ResultActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="pincrack.ViewLogsActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>